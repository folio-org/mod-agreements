{
  "id": "${info.app.name}-${info.app.version}",
  "name": "${info.app.name}",
  "provides": [
    {
      "id": "erm",
      "version": "${info.app.minorVersion}",
      "handlers" : [
        {
          "methods": ["GET"],
          "pathPattern": "/erm/sas",
          "permissionsRequired": [ "agreements.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/sas/{id}",
          "permissionsRequired": [ "agreements.item.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/sas/{id}/export",
          "permissionsRequired": [ "agreements.item.export" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/sas/{id}/export/*",
          "permissionsRequired": [ "agreements.item.export" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/sas/linkedLicenses",
          "permissionsRequired": [ "agreements.licenses.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/sas/{id}/linkedLicenses",
          "permissionsRequired": [ "agreements.item.licenses.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/sas/{id}/*",
          "permissionsRequired": [ "agreements.item.get" ]
        },{
          "methods": ["POST"],
          "pathPattern": "/erm/sas",
          "permissionsRequired": [ "agreements.collection.post" ]
        },{
          "methods": ["PUT"],
          "pathPattern": "/erm/sas/{id}",
          "permissionsRequired": [ "agreements.item.put" ]
        },{
          "methods": ["DELETE"],
          "pathPattern": "/erm/sas/{id}",
          "permissionsRequired": [ "agreements.item.delete" ]
        },
        
        {
          "methods": ["GET"],
          "pathPattern": "/export",
          "permissionsRequired": [ "agreements.collection.export" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/export/*",
          "permissionsRequired": [ "agreements.collection.export" ]
        },
        
        {
          "methods": ["GET"],
          "pathPattern": "/erm/files",
          "permissionsRequired": [ "agreements.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/files/{id}",
          "permissionsRequired": [ "agreements.files.item.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/files/{id}/*",
          "permissionsRequired": [ "agreements.files.item.get" ]
        },{
          "methods": ["POST"],
          "pathPattern": "/erm/files",
          "permissionsRequired": [ "agreements.files.collection.post" ]
        },{
          "methods": ["PUT"],
          "pathPattern": "/erm/files/{id}",
          "permissionsRequired": [ "agreements.files.item.put" ]
        },{
          "methods": ["DELETE"],
          "pathPattern": "/erm/files/{id}",
          "permissionsRequired": [ "agreements.files.item.delete" ]
        },
        
        {
          "methods": ["GET"],
          "pathPattern": "/erm/contacts",
          "permissionsRequired": [ "agreements.contacts.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/contacts/{id}",
          "permissionsRequired": [ "agreements.contacts.item.get" ]
        },
        
        {
          "methods": ["GET"],
          "pathPattern": "/erm/org",
          "permissionsRequired": [ "agreements.orgs.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/org/{id}",
          "permissionsRequired": [ "agreements.orgs.item.get" ]
        },
        
        {
          "methods": ["GET"],
          "pathPattern": "/erm/packages",
          "permissionsRequired": [ "agreements.packages.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/packages/{id}",
          "permissionsRequired": [ "agreements.packages.item.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/packages/{id}/content",
          "permissionsRequired": [ "agreements.packages.item.content.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/packages/{id}/content/*",
          "permissionsRequired": [ "agreements.packages.item.content.get" ]
        },
        
        {
          "methods": ["GET"],
          "pathPattern": "/erm/refdataValues",
          "permissionsRequired": [ "agreements.refdataValues.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/refdataValues/{id}",
          "permissionsRequired": [ "agreements.refdataValues.item.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/refdataValues/{domain}/{property}",
          "permissionsRequired": [ "agreements.refdataValues.item.delete" ]
        },{
          "methods": ["POST"],
          "pathPattern": "/erm/refdataValues",
          "permissionsRequired": [ "agreements.refdataValues.collection.post" ]
        },{
          "methods": ["PUT"],
          "pathPattern": "/erm/refdataValues/{id}",
          "permissionsRequired": [ "agreements.refdataValues.item.put" ]
        },{
          "methods": ["DELETE"],
          "pathPattern": "/erm/refdataValues/{id}",
          "permissionsRequired": [ "agreements.refdataValues.item.delete" ]
        },
        
        {
          "methods": ["GET"],
          "pathPattern": "/erm/kbs",
          "permissionsRequired": [ "agreements.kbs.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm/kbs/{id}",
          "permissionsRequired": [ "agreements.kbs.item.get" ]
        },{
          "methods": ["POST"],
          "pathPattern": "/erm/kbs",
          "permissionsRequired": [ "agreements.kbs.collection.post" ]
        },{
          "methods": ["PUT"],
          "pathPattern": "/erm/kbs/{id}",
          "permissionsRequired": [ "agreements.kbs.item.put" ]
        },{
          "methods": ["DELETE"],
          "pathPattern": "/erm/kbs/{id}",
          "permissionsRequired": [ "agreements.kbs.item.delete" ]
        },
        
        
        {
          "methods": ["GET", "POST"],
          "pathPattern": "/erm/org",
          "modulePermissions": [ "vendor.collection.get" ]
        }, {
          "methods": ["GET"],
          "pathPattern": "/erm/org/find/{name}",
          "modulePermissions": [ "vendor.collection.get" ]
        }
      ]
    },{
      "id" : "_tenant",
      "version" : "1.2",
      "interfaceType" : "system",
      "handlers" : [ {
          "methods" : [ "POST", "DELETE" ],
          "pathPattern" : "/_/tenant"
        }, {
         "methods" : [ "POST" ],
         "pathPattern" : "/_/tenant/disable"
        }
      ]
    },
    {
      "id" : "codex",
      "version" : "3.0",
      "interfaceType": "multiple",
      "handlers" : [
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/codex-instances",
          "permissionsRequired" : [ "codex.collection.get" ]
        }, {
          "methods" : [ "GET" ],
          "pathPattern" : "/codex-instances/{id}",
          "permissionsRequired" : [ "codex.item.get" ]
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "module.erm-stripes.enabled",
      "displayName": "OLF ERM",
      "description": "Base property to enable any access the OLF ERM module",
      "visible": false
    },
    {
      "permissionName": "agreements.user",
      "displayName": "Agreements App user",
      "description": "Agreements User",
      "subPermissions": [
        "module.agreements.enabled",
        "ui-agreements.agreements.view",
        "ui-agreements.agreements.edit"
      ],
      "visible":true
    },
    {
      "permissionName": "agreements.admin",
      "displayName": "Agreements App Admin",
      "description": "Agreements Administrative User",
      "subPermissions": [
        "module.agreements.enabled",
        "ui-agreements.agreements.view",
        "ui-agreements.agreements.edit"
      ],
      "visible":true
    },
    {
      "permissionName": "olf-erm.user",
      "displayName": "OLF ERM - User",
      "description": "A user of OLF ERM",
      "subPermissions": [
        "module.agreements.enabled",
        "ui-agreements.agreements.view",
        "ui-agreements.agreements.edit"
      ],
      "visible":true
    },
    {
      "permissionName": "ermusage.vendors",
      "displayName": "ermusage vendors",
      "description": "Permissions to get and manage vendors",
      "subPermissions": [
        "vendor.collection.get",
        "vendor.item.get",
        "vendor.item.put",
        "vendor.item.post",
        "contact_category.collection.get",
        "contact_category.item.get",
        "vendor_category.collection.get",
        "vendor_category.item.get"
      ]
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${info.app.name}:${info.app.version}",
    "dockerArgs": {
      "Memory": 805306368,
      "HostConfig": { "PortBindings": { "8080/tcp":  [{ "HostPort": "%p" }] } }
    },
    "dockerPull" : false,
    "env": [
      { "name": "JAVA_OPTIONS", "value": "-server -Xmx384M -XX:MaxMetaspaceSize=192M -XX:MaxDirectMemorySize=128M -XX:+PrintFlagsFinal" },
      { "name": "DB_HOST", "value": "postgres" },
      { "name": "DB_PORT", "value": "5432" },
      { "name": "DB_USERNAME", "value": "folio_admin" },
      { "name": "DB_PASSWORD", "value": "folio_admin" },
      { "name": "DB_DATABASE", "value": "okapi_modules" },
      { "name": "DB_MAXPOOLSIZE", "value": "50" }
    ]
  }
}
